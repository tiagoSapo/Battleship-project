<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IntroFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/battleship_intro"
            android:padding="50dp"
            android:orientation="horizontal"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:id="@+id/linearLayoutINTRO"
            android:padding="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/start_new_game"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/ButtonNewProfile" />

            <Button
                android:id="@+id/game_history"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/ButtonHistory" />
            <Button
                android:id="@+id/load_game"
                android:layout_width="250dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="@string/ButtonLoadProfile" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>


